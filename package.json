{
  "name": "loops-mvp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "functions"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:functions": "npm run dev --workspace=functions",
    "build:functions": "npm run build --workspace=functions",
    "dev:all": "npm-run-all --parallel dev dev:functions",
